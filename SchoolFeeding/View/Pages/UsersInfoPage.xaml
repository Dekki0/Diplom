<UserControl x:Class="SchoolFeeding.View.Pages.UsersInfoPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolFeeding.View.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid 
            IsReadOnly="True" 
            ItemsSource="{Binding PaymentsData}"
            AutoGenerateColumns="False"
            FontSize="40"
            >
            <DataGrid.Columns>
                <DataGridTextColumn CanUserResize="False" FontSize="40" Header="Уплачено" Binding="{Binding Amount}"/>
                <DataGridTextColumn CanUserResize="False" FontSize="40" Header="Дата оплаты" Binding="{Binding PaymentDate}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
