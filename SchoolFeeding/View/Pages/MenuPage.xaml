<UserControl x:Class="SchoolFeeding.View.Pages.MenuPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolFeeding.View.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button 
            Click="OpenViewInformationPage"
            Margin="20 2 20 2"
            FontSize="20"
            Content="Просмотр информации"/>
        <Button
            Click="OpenReportingPage"
            Margin="20 2 20 2"
            FontSize="20"
            Grid.Row="1"
            Content="Отчётность" />
        
        <Button
            Click="OpenAdmistratingPage"
            Margin="20 2 20 2"
            FontSize="20"
            Grid.Row="2"
            Content="Администрирование"/>
        
        <Button
            Click="Exit"
            Margin="20 2 20 2"
            FontSize="20"
            Grid.Row="3"
            Content="Выход"/>
    </Grid>
</UserControl>
